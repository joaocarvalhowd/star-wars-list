@import "~src/app/styles/base/_variables"

.loading
  width 50px
  height 50px
  border-radius 100%
  background $orange
  position relative

  &:after, &:before
    content ''
    display block
    width 100%
    height 100%
    border-radius 100%

  &:after
    position absolute
    top -2px
    left -2px
    border 2px solid transparent
    border-top-color $red
    border-bottom-color $red
    animation spinny 0.75s linear infinite

@keyframes spinny
  0%
    transform rotate(0deg) scale(1)
  50%
    transform rotate(45deg) scale(1.2)
  100%
    transform rotate(360deg) scale(1)
